# Common across any system using zsh

# Source common across bash and zsh
if [ -f "$HOME/common/csh" ]; then
    source "$HOME/common/csh"
fi

# Source zshrc and zprofile
alias sp='source ~/.zshrc; source ~/.zprofile'

# Edit zprofile
alias ep='emacs ~/.zprofile'
alias epc='emacs ~/common/czsh'
alias cpm='emacs ~/common/maczsh'
